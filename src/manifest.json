{
    "manifest_version": 3,
    "name": "AEM URL Switcher",
    "version": "1.0",
    "description": "Quickly switch between editor and publish pages in AEM and manage multiple server URLs.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "logo.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Switch between editor and publish pages"
        }
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "options_page": "settings.html",
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    }
}